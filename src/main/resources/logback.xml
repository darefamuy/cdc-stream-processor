<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Reduce noise from Kafka internals -->
  <logger name="org.apache.kafka" level="WARN"/>
  <logger name="org.apache.kafka.streams.processor.internals" level="INFO"/>
  <logger name="io.confluent" level="WARN"/>
  <logger name="org.apache.zookeeper" level="ERROR"/>

  <!-- AB Bank application logging -->
  <logger name="com.abbank.streams" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
